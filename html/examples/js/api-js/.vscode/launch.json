{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Listen for Xdebug",
        "type": "php",
        "request": "launch",
        "port": 9003,
        "pathMappings": {
          "/var/www/html": "${workspaceFolder}/html"
        },
        "serverSourceRoot": "/var/www/html",
        "localSourceRoot": "${workspaceFolder}/html",
        "xdebugSettings": {
          "max_children": 256,
          "max_data": 2048,
          "max_depth": 10,
          "show_hidden": 1
        },
        "ignore": [
          "**/vendor/**/*"
        ]
      }
    ]
  }